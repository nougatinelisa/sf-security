{% extends 'ProductBundle:Admin:base.html.twig' %}

{% block content %}
    <h1>Categories list</h1>
    <hr>
    <div class="table-responsive">
        <table class="table table-stripped table-condensed">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Groupe d'attributs</th>
                    <th>Slug</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>
                        <a href="{{ path('admin_category_show', { 'id': category.id }) }}">
                            {{ category.id }}
                        </a>
                    </td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.attributeGroup.name }}</td>
                    <td>{{ category.slug }}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a href="{{ path('admin_category_show', { 'id': category.id }) }}"
                                    class="btn btn-xs btn-primary">
                                    Show
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('admin_category_edit', { 'id': category.id }) }}"
                                    class="btn btn-xs btn-warning">
                                    Edit
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <hr>
    <ul class="list-inline">
        <li>
            <a href="{{ path('admin_category_new') }}" class="btn btn-sm btn-success">
                Create a new category
            </a>
        </li>
    </ul>
{% endblock %}
